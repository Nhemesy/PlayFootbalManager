<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pedrodavidlp.footballmanager">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".FootballApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">
        <activity android:name=".view.activity.MainActivity"
            android:theme="@style/AppTheme.TransNav"/>
        <activity
            android:name=".view.activity.LoginActivity"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".view.activity.LauncherActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.JoinGroupActivity">

        </activity>
    </application>

</manifest>